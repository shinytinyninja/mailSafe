{
    "manifest_version": 2,
  
    "name": "Scrap",
    "description": "Scrap",
    "version": "1.0",
    "author": "",
  
    "background": {
      "scripts": ["popup.js"],
      "persistent": true
    },
  
    "browser_action": {
        "default_title": "Test",
        "default_popup": "index.html",
        "default_icon" : "icon.png"
    },
    "permissions": [
        "activeTab",
        "<all_urls>"
    ]
}